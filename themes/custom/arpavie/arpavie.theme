function arpavie_theme($existing, $type, $theme, $path)
{
    return [
        'home' => [
            'template' => 'home',
            'path' => $path . '/templates',
            'variables' => [
                'searchResidenceForm' => null,
                'carouselList' => []
            ],
        ],
    ];
}

